
- size ||= "btn-small"
- type ||= "btn-primary"
- icon ||= ""
- onclick ||= 'empty'
- klass ||= ""

- def isOnclick(value)
	- if value != 'empty'
		- {:onclick => "#{value}"}
	- else
		- {}

%button{isOnclick(onclick),:class=>"btn #{size} #{type} #{klass}",
				:type=>"submit",
				:name=>"#{name}"}
	- if !icon.empty?
		%i{:class=>"#{icon}"}
	= caption

