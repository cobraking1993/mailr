<h4>{{i18n compose.title}}</h4>
<div class="row">
  <div class="large-12 columns">
    <label>{{i18n compose.address}}
      {{input value=address }}
    </label>
  </div>
</div>
<div class="row">
  <div class="large-12 columns">
    <label>{{i18n compose.cc_address}}
      {{input value=cc_address }}
    </label>
  </div>
</div>
<div class="row">
  <div class="large-12 columns">
    <label>{{i18n compose.subject}}
      {{input value=subject }}
    </label>
  </div>
</div>
<div class="row">
  <div class="large-12 columns">
    <label>{{i18n compose.body}}
      {{textarea value=body class="compose-body" rows="20" cols="80"}}
    </label>
  </div>
</div>
<button class="button radius small" {{action "sendMessage" }}><i class="fi-arrow-right"></i>{{i18n compose.send}}</button>
